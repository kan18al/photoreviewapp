<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.photoreviewapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.example.photoreviewapp.ui.gallery.PhotoMakeFragment"
        android:label="@string/menu_photoMake"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.example.photoreviewapp.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.photoreviewapp.ui.LoginFragment"
        android:label="@string/login_fragment"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/accSetFragment"
        android:name="com.example.photoreviewapp.ui.accSetFragment"
        android:label="Account Settings"
        tools:layout="@layout/account_settings_layout" />

</navigation>